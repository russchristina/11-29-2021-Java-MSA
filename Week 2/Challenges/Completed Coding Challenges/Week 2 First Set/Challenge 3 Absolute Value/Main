// Write a method that returns the absolute value of the difference of any two integers

public class Main {

	//Two integers need to be passed to a method

	public static void main(String[] args) {
		
		// instantiate Main class as absoluteDifference is not static

		Main m = new Main();
		
		//Int values to be passed
		int num1 = 30;
		int num2 = 300;

		//store the returned difference in a int

		int difference = m.absoluteDifference(num1, num2);
		
		//print out the difference
		System.out.printf("Absolute difference of %d and %d is: %d", num1, num2, difference); 

	}


	public int absoluteDifference(int num1, int num2) {
		
		// Find difference between the two passed integers

		int difference = num1 - num2;
		
		//check to see if the difference is negative
		if(difference < 0){

			//if it is negative, multiply it by -1 to return the positive value
			
			difference *= -1;

		}else{

			//if it is not negative, return the value already found
			return difference;
		}

		// return function if difference is negative
		
		return difference;

	}



}
